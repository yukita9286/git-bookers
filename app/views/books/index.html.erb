<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>
   <span>
    <%= link_to book.title, book_path(book.id) %> 
   </span>
   
    <p>Body</p>
   <span>
    <%= link_to book.body, book_path(book.id) %> 
   </span>
<% end %>


<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_withにオプション追記 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '投稿' %>
  
<% end %>
